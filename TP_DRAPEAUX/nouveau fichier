    border: solid black 1px
}
td{
    border: solid black 1px
}
th{
    border: 1px solid black;
    background-color: #99ff99
}
.or{
    
    background-color: gold;
    
}

.argent{
    
    background-color: silver;
    
}

.bronze{
    
    background-color: #996600;
    
}






